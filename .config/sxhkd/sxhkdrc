# Reload config
super + {_,shift + }Escape
	{pkill -USR1 -x sxhkd,bspc wm -r}

# Go terminal
super + Return
	st

# Internet browser
super + w
	brave-browser

# Show dmenu
super + space
	dmenu_run

# Screenshot
Print
	flameshot gui

# Power menu
Pause
	powermenu

# Toggle microphone
super + c
	amixer -q -D pulse sset Capture toggle

# Focus/swap windows
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Resize windows
super + alt + {h,j,k,l}
	bspc node -z {right -20 0,bottom 0 20,bottom 0 -20,right 20 0}

# Close/kill window
super + {_,shift + }q
	bspc node -{c,k}

# Focus/send to desktop
super + {_,shift + }{1-3,8-9,0}
	bspc {desktop -f,node -d} '^{1-3,4-5,6}'

# Set window state
super + {t,f}
	bspc node -t {tiled,fullscreen}

